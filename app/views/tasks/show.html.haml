%h1
  Logged time for
  %span.task=@task.name

%p
  %b Estimated minutes:
  = @task.estimated_minutes
%p
  %b Minutes logged:
  = @task.minutes_logged

%table.table
  %tr
    %th Notes
    %th Time minutes
    %th Date
    %th
    %th

  - @task.logs.each do |log|
    %tr
      %td= log.notes
      %td= log.time_minutes
      %td= log.log_date
      %td= link_to 'Show', log
      %td= link_to 'Edit', edit_log_path(log)

%br


= link_to 'Add another task', new_project_task_path(@task.project), class: "btn"
= link_to 'Log some time', new_task_log_path(@task), class: "btn"

= link_to 'Edit', edit_task_path(@task)
\|
= link_to 'Back', project_path(@task.project)
